<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Intercepta renderização de preços -->
    <type name="Magento\Framework\Pricing\Render">
        <plugin name="buzz_hideprice_render_plugin"
                type="Buzz\Hideprice\Plugin\Pricing\RenderPlugin"
                sortOrder="10" />
    </type>

    <!-- Aplica variação de cache por status de login -->
    <type name="Magento\Framework\App\Http\Context">
        <plugin name="buzz_hideprice_customer_context"
                type="Buzz\Hideprice\Plugin\Customer\ContextPlugin"
                sortOrder="5" />
    </type>

</config>